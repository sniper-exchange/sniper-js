{
  "name": "sniper-js",
  "version": "0.2.0",
  "description": "Core JS Module for Sniper.io Platform",
  "license": "AGPL-3.0",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sniper-exchange/sniper-js.git"
  },
  "scripts": {
    "start": "webpack-dashboard -- webpack-dev-server --config ./config/webpack.config.js --port 9000 --inline",
    "build": "rimraf dist && webpack --config ./config/webpack.production.config.js && webpack --target node --config ./config/webpack.production.config.js",
    "test": "cross-env NODE_ENV=test truffle test",
    "coverage-test": "cross-env NODE_ENV=test nyc truffle test",
    "coverage": "cross-env NODE_ENV=test nyc truffle test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "rpc": "ganache-cli -s 2626hootcows2626 --defaultBalanceEther 10000",
    "gulp": "gulp",
    "deploy:ropsten": "rm -rf build/ && truffle compile && truffle migrate --network ropsten"
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/Assert/**/*.js",
      "src/**/Net/**/*.js"
    ],
    "check-coverage": true,
    "sourceMap": false,
    "instrument": false,
    "lines": 20,
    "statements": 20,
    "functions": 20,
    "branches": 20
  },
  "resolutions": {
    "hoek": "4.2.1"
  },
  "dependencies": {
    "bignumber.js": "6.0.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.1.4",
    "firebase": "^4.10.0",
    "hoek": "4.2.1",
    "web3": "1.0.0-beta.30",
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "bignumber.js-5": "git+https://github.com/sniper-exchange/bignumber.js.git#release/5.0.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "chai-bignumber": "2.0.2",
    "codecov": "^3.0.0",
    "compression-webpack-plugin": "^1.1.11",
    "cross-env": "^5.1.3",
    "css-loader": "^0.15.1",
    "electron": "^1.8.3",
    "es6-promisify": "~6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.10.0",
    "ganache-cli": "6.1.0-beta.0",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^3.0.6",
    "json-loader": "^0.5.4",
    "mocha": "^5.0.1",
    "node-libs-browser": "^0.5.2",
    "node-loader": "^0.6.0",
    "nsp": "^3.2.1",
    "nyc": "^11.4.1",
    "pug": "2.0.0-alpha7",
    "pug-html-loader": "^1.0.5",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.12.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.0.0",
    "truffle": "^4.0.6",
    "truffle-hdwallet-provider": "0.0.3",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-server": "^3.1.1"
  },
  "keywords": [
    "sniper",
    "decentralized",
    "exchange",
    "solidity",
    "ethereum",
    "eos"
  ]
}
